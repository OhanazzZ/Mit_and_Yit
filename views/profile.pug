extends layout

block content
    .container
        section#homeicon
            a(href='/home')
                img.home(src='/images/home.png', alt='home icon')
            p Home
        aside#logouticon
            a(href='/user/logout')
                img.logout(src='/images/logout.png', alt='logout icon')
            p Logout
    nav#navbar
        .container
            ul
                li
                    a(href='/user/profile') Profile&nbsp;
                li
                    a(href='#') Matching&nbsp;
                li
                    a(href='#') Review&nbsp;

    h1 Personal Profile
    div(class='msg') #{msg}
    .container
        section#profile
            table
                tbody
                    tr
                        th(colspan='2') Basic Profile
                    tr
                        td#label Username:
                        td#info #{user.username}
                    tr
                        td Email:
                        td #{user.email}
                    tr
                        td Gender:
                        td #{user.gender}
                    tr
                        th(colspan='2') Cuisine Preference
                    tr
                        td Cuisine:
                        td #{user.cuisine}
                    tr
                        td Allergy:
                        td #{user.allergy}
                    tr
                        td Religion:
                        td #{user.religion}
                    tr
                        th(colspan='2') Availability
                    tr
                        td Lunch:
                        td #{user.lunch}
                    tr
                        td Dinner:
                        td #{user.dinner}
                    tr
                        td Coffee:
                        td #{user.coffee}
                    tr
                        th(colspan='2') Additional Information
                    tr
                        td Major:
                        td #{user.major}
                    tr
                        td Level:
                        td #{user.level}
                    tr
                        td Hobbies:
                        td #{user.hobbies}
                    tr
                        td Career:
                        td #{user.career}
                        
            section#profilebutton
                br
                a.btn.btn-primary(href='/user/edit',class="button") Edit
extends layout

block content
    .container
        section#homeicon
            a(href='/home')
                img.home(src='/images/home.png', alt='home icon')
            p Home
        aside#logouticon
            a(href='/user/logout')
                img.logout(src='/images/logout.png', alt='logout icon')
            p Logout
    nav#navbar

        .container
            ul
                li
                    a(href='/user/profile') Profile
                li
                    a(href='#') Matching
                li
                    a(href='#') Review

    h1 Personal Profile
    h5 (* Must provide field)

    .container.profileform
        div(class='msg') #{msg}
        != messages('message', locals)
        if errors
            each error, i in errors
                div(class="alert") #{error.msg}

        form(method='POST', action='/user/edit')
            h2 Basic Profile
            section#basicprofile
                #form-group
                    label Username:*
                    input.form-control(name='username',type='text',value=user.username)
                #form-group
                    label Email:*
                    input.form-control(name='email', type='text', value=user.email)
                #form-group
                    label Password:*
                    input.form-control(name='password',type='password', value=user.password)
                #form-group
                    label Confirm:*
                    input.form-control(name='password2',type='password', value=user.password)
                #form-group
                    label Gender:
                    select(name='gender', onchange=user.gender)
                        option(value='Male', selected = (user.gender == 'Male')) Male
                        option(value='Female',selected = (user.gender == 'Female')) Female
                        option(value='Other',selected = (user.gender == 'Other')) Other

            h2 Cuisine Preference
            section#cuisine
                #form-group
                    label Cuisine:
                    input.form-control(name='cuisine', type='text', value=user.cuisine)

                #form-group
                    label Allergy:
                    input.form-control(name='allergy', type='text', value=user.allergy)

                #form-group
                    label Religion:
                    input.form-control(name='religion', type='text', value=user.religion)


            h2 Availability
            section#availability
                #form-group
                    label Lunch:
                    select(name='lunch', value=user.lunch)
                        option(value='Yes', selected = (user.lunch == 'Yes')) Yes
                        option(value='No', selected = (user.lunch == 'No')) No

                #form-group
                    label Dinner:
                    select(name='dinner', value=user.dinner)
                        option(value='Yes', selected = (user.dinner == 'Yes')) Yes
                        option(value='No', selected = (user.dinner == 'No')) No

                #form-group
                    label Coffee:
                    select(name='coffee', value=user.coffee)
                        option(value='Yes',selected = (user.coffee == 'Yes')) Yes
                        option(value='No',selected = (user.coffee == 'No')) No


            h2 Additional Information
            section#aditional
                #form-group
                    label Major:
                    input.form-control(name='major', type='text', value=user.major)

                #form-group
                    label Level:
                    input.form-control(name='level', type='number', value=user.level)

                #form-group
                    label Hobbies:
                    input.form-control(name='hobbies', type='text', value=user.hobbies)

                #form-group
                    label Career:
                    input.form-control(name='career', type='text', value=user.career)

            section#profilebutton
                br
                input.btn.btn-primary(class="button",type='submit',value='Update')

